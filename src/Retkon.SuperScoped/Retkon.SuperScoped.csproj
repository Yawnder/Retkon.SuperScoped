<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <WarningsAsErrors>Nullable</WarningsAsErrors>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <Title>Retkon's SuperScope</Title>
    <Description>A facilitator to frame scope usages in Microsoft's DI.</Description>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Retkon,Scope,SuperScope,Dependency Injection,DI</PackageTags>
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <Authors>Yawnder</Authors>
    <Company>Retkon</Company>
    <Version>1.0.0</Version>
    <RepositoryUrl>https://github.com/Yawnder/Retkon.SuperScoped</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>AGPL-3.0-only</PackageLicenseExpression>
    
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath=""/>
  </ItemGroup>
  
</Project>
